//- Header Menu
mixin menuLink(title, href="#")
	li.header-menu-item
		a.header-menu-link(href= href)=title
//- Header Bottom
mixin headerBottomItem(number, title, active = false)
	if active == false
		.header-bottom-item
			span.header-bottom-number=number
			span.header-bottom-text=title
	else
		.header-bottom-item.is-active
			span.header-bottom-number=number
			span.header-bottom-text=title
//- Blockbox
mixin blockBox(caption, title, desc)
	.block-box
		h3.block-box-caption=caption
		h2.block-box-heading=title
		if desc
			p.block-box-desc=desc

//- About
mixin aboutItem(about)
	.about-item
		img.about-image(src= about.src, alt= about.alt)
		.about-overlay
			i.about-icon(class= about.icon)
			span.about-title= about.title
//- Service
mixin serviecItem(src, title, desc)
	.service-item
		img.service-item-icon(src=src)
		.service-item-info
			h3.service-item-title=title
			p.service-item-desc=desc
//- We Do
mixin wedoItem(src, title, desc, active="")
	.wedo-item(class= active)
		.wedo-item-header
			img.wedo-item-icon(src= src)
			h3.wedo-item-title= title
			img.wedo-item-arrow-down(src="../images/arrow-down-icon.png")
			img.wedo-item-arrow-up(src="../images/arrow-up-icon.png")
		.wedo-item-content
			.wedo-item-text= desc
//- Team Social
mixin teamSocial(facebook = "#", twitter = "#", pinterest = "#", instagram = "#")
	ul.team-social
		li.team-social-item
			a.team-social-link(href=facebook)
				i.fab.fa-facebook-f.team-social-icon
		li.team-social-item
			a.team-social-link(href=twitter)
				i.fab.fa-twitter.team-social-icon
		li.team-social-item
			a.team-social-link(href=pinterest)
				i.fab.fa-pinterest-p.team-social-icon
		li.team-social-item
			a.team-social-link(href=instagram)
				i.fab.fa-instagram.team-social-icon
//- Team
mixin teamItem(src, name, position)
	.team-item
		.team-main
			img(src=src).team-image
			.team-overlay
				if block
					block
		.team-info
			h3.team-info-name= name
			span.team-info-position= position
//- Work
mixin workItem(src = "./images/img-work1.png", icon = "./images/img-work-icon.png", title = "Creatively Designed", itemFullClass = "", desc="Lorem ipsum dolor sit")
	.work-item(class= itemFullClass)
		img(src= src, alt="Image Work").work-item-image
		.work-content
			img(src= icon, alt="Image Work Icon").work-content-image
			h3.work-content-title= title
			span.work-content-desc.text.text--light= desc
//- People
mixin peopleItem(src="./images/img-people.png", name="Matthew Dix", position="Graphic design", desc="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim.")
	li.people-item
		img(src=src).people-avatar
		.people-info
			h3.people-info-name= name
			span.people-info-position.text.text--light= position
			p.people-info-desc.text.text-nomal= desc
//- Story
mixin storyItem(src="./images/img-story1.png", dateNumber="15", dateText="Jan", title="Lorem ipsum dolor sit", desc="Lorem, ipsum dolor sit amet consectetur adipisicing elit. Fugiat consectetur repellat rerum excepturi saepe, accusamus adipisci, neque harum hic commodi laudantium magni dignissimos iusto vero quam reiciendis ducimus ab delectus.", view="542", comments="17")
	li.story-item
		.story-media
			img.story-image(src=src)
			.story-date
				span.story-date-number= dateNumber
				span.story-date-text.text.text--light= dateText
		h3.story-title= title
		.story-desc
			p.story-desc-text.text.text-nomal= desc
		.story-meta
			.story-meta-item
				i.fas.fa-eye.story-meta-icon
				span.story-meta-number.text.text--light= view
			.story-meta-item
				i.fas.fa-comment-dots.story-meta-icon
				span.story-meta-number.text.text--light= comments
//- Quote
mixin quoteItem(src="./images/img-quote.png", type = false, desc='“Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation.”', author="Jon Doe")
	.quote-item
		if type == false
			.quote-item-icon
				img(src= src)
		else
			.quote-item-img
				img(src= src)
		.quote-item-info
			p.quote-item-desc= desc
			span.quote-item-author= author